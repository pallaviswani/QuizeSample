<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"

            android:id="@+id/birdImg" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>


    <CheckBox
            android:text="CheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/optionOne" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/birdImg"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:checked="false" android:textSize="18sp"/>
    <CheckBox
            android:text="CheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/optionTwo" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/birdImg"
            android:layout_marginStart="200dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="200dp" android:textSize="18sp"/>
    <CheckBox
            android:text="CheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/optionThree" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/optionOne"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:textSize="18sp"/>
    <CheckBox
            android:text="CheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/optionFour" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/optionTwo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="200dp"
            android:layout_marginStart="200dp" android:textSize="18sp"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNext" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/optionFour" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:width="150dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questionNumber" app:layout_constraintStart_toEndOf="@+id/birdImg"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtquestion"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/birdImg"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>